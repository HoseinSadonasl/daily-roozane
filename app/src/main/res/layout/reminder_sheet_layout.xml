    <com.google.android.material.button.MaterialButton
        android:id="@+id/setReminderBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:insetLeft="@dimen/low_dp"
        android:insetTop="@dimen/low_dp"
        android:insetRight="@dimen/low_dp"
        android:insetBottom="@dimen/low_dp"
        android:elevation="0dp"
        android:shadowDx="0"
        android:shadowDy="0"
        app:backgroundTint="@color/teal_700"
        app:cornerRadius="@dimen/med_dp"
        app:elevation="@dimen/high_dp"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed-medium"
        android:firstBaselineToTopHeight="0dp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:lineSpacingMultiplier="0"
        android:stateListAnimator="@null"
        app:layout_constraintEnd_toEndOf="@+id/timePicker"
        app:layout_constraintStart_toStartOf="@+id/timePicker"
        app:layout_constraintTop_toBottomOf="@+id/timePicker" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/timePicker"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:elevation="0dp"
        android:firstBaselineToTopHeight="0dp"
        android:gravity="start|center"
        android:includeFontPadding="false"
        android:insetLeft="@dimen/low_dp"
        android:insetTop="@dimen/low_dp"
        android:insetRight="@dimen/low_dp"
        android:insetBottom="@dimen/low_dp"
        android:lineSpacingExtra="0dp"
        android:lineSpacingMultiplier="0"
        android:shadowDx="0"
        android:shadowDy="0"
        tools:text="21:36"
        android:textAllCaps="false"
        android:textColor="@color/Gray_c"
        android:textSize="@dimen/remindetText"
        app:backgroundTint="@color/white"
        app:cornerRadius="@dimen/med_dp"
        app:elevation="0dp"
        app:icon="@drawable/ic_baseline_timer_24"
        app:iconGravity="start"
        app:iconTint="@color/Second_black"
        android:stateListAnimator="@null"
        app:layout_constraintEnd_toEndOf="@+id/datepicker"
        app:layout_constraintStart_toStartOf="@+id/datepicker"
        app:layout_constraintTop_toBottomOf="@+id/datepicker"
        tools:targetApi="p" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/datepicker"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        android:elevation="0dp"
        android:firstBaselineToTopHeight="0dp"
        android:gravity="start|center"
        android:includeFontPadding="false"
        android:insetLeft="@dimen/low_dp"
        android:insetTop="@dimen/low_dp"
        android:insetRight="@dimen/low_dp"
        android:insetBottom="@dimen/low_dp"
        android:lineSpacingExtra="0dp"
        android:lineSpacingMultiplier="0"
        android:text="2021-08-24"
        android:textAllCaps="false"
        android:stateListAnimator="@null"
        android:textColor="@color/Gray_c"
        android:textSize="@dimen/remindetText"
        app:backgroundTint="@color/white"
        app:cornerRadius="@dimen/med_dp"
        app:elevation="0dp"
        app:icon="@drawable/ic_calendar"
        app:iconGravity="start"
        app:iconTint="@color/Second_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closeSheetBtn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/closeSheetBtn"
        android:layout_width="@dimen/high_dp"
        android:layout_height="@dimen/high_dp"
        android:layout_marginEnd="8dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="@color/white"
        app:icon="@drawable/ic_close"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="@dimen/low_dp"
        app:iconTint="@android:color/holo_red_light"
        app:cornerRadius="@dimen/low_dp"
        app:elevation="0dp"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="@+id/reminderSheet"
        app:layout_constraintEnd_toEndOf="@+id/datepicker"
        app:layout_constraintTop_toTopOf="@+id/reminderSheet" />
</androidx.constraintlayout.widget.ConstraintLayout>
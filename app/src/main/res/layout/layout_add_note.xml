<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:chainUseRtl="true"
        tools:context=".AddReadNote">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/button_addNote_backward"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignParentStart="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:tint="@color/Second_black"
                    app:srcCompat="@drawable/ic_chevron" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textView_addNote_appbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/imageView_addNote_delete"
                    android:layout_toEndOf="@+id/button_addNote_backward"
                    android:gravity="start|center_vertical"
                    android:text="@string/write_note"
                    android:textDirection="rtl"
                    app:layout_constraintBottom_toBottomOf="@id/button_addNote_backward"
                    app:layout_constraintStart_toEndOf="@id/button_addNote_backward"
                    app:layout_constraintTop_toTopOf="@id/button_addNote_backward"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageView_addNote_delete"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="18dp"
                    android:tint="@color/Second_black"
                    app:layout_constraintBottom_toBottomOf="@id/button_addNote_backward"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/button_addNote_backward"
                    app:srcCompat="@drawable/ic_trash_remove" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editText_addNote_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_32dp"
            android:layout_marginTop="@dimen/padding_16dp"
            android:layout_marginEnd="@dimen/padding_32dp"
            android:background="@null"
            android:hint="@string/title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appBarLayout" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editText_addNote_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/padding_12dp"
            android:layout_marginBottom="142dp"
            android:background="@null"
            android:gravity="start"
            android:hint="@string/content"
            android:textColor="@color/Second_black"
            app:layout_constraintBottom_toTopOf="@+id/fab_addNote_save"
            app:layout_constraintEnd_toEndOf="@id/editText_addNote_title"
            app:layout_constraintStart_toStartOf="@+id/editText_addNote_title"
            app:layout_constraintTop_toBottomOf="@id/editText_addNote_title" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/Second_black"
            android:layout_marginVertical="@dimen/padding_8dp"
            app:layout_constraintTop_toBottomOf="@id/editText_addNote_description"
            app:layout_constraintBottom_toBottomOf="@+id/editText_addNote_description"
            app:layout_constraintEnd_toEndOf="@+id/switch_setReminder_addNoteFragment"
            app:layout_constraintStart_toStartOf="@+id/switch_setReminder_addNoteFragment" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_setReminder_addNoteFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_16dp"
            android:text="@string/reminder_btn_addNoteFragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reminder_parent"
            android:layout_width="0dp"
            android:layout_height="@dimen/padding_38dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/textView_addNote_modifiedDate"
            app:layout_constraintEnd_toEndOf="@+id/switch_setReminder_addNoteFragment"
            app:layout_constraintStart_toStartOf="@+id/switch_setReminder_addNoteFragment"
            app:layout_constraintTop_toBottomOf="@+id/switch_setReminder_addNoteFragment"
            app:layout_constraintVertical_bias="0.0"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/ic_baseline_timer_24" />

            <TextView
                android:id="@+id/textView_reminderDate_addNoteFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="4"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                android:text="2022 Jun 12" />

            <TextView
                android:id="@+id/textView_reminderTime_addNoteFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="7:25 PM" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_addNote_modifiedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/padding_16dp"
            android:text="@string/modified"
            android:textColor="@color/Gray_c"
            android:textSize="@dimen/low_TextSize"
            app:layout_constraintBottom_toTopOf="@+id/textView_addNote_createdDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/reminder_parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_addNote_createdDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp"
            android:text="@string/created"
            android:textColor="@color/Gray_c"
            android:textSize="@dimen/low_TextSize"
            app:layout_constraintBottom_toTopOf="@+id/fab_addNote_save"
            app:layout_constraintEnd_toEndOf="@+id/textView_addNote_modifiedDate"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/reminder_parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_addNote_save"
            style="@style/AppShapeAppearance.SmallComponent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/todo"
            android:tint="@android:color/white"
            app:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_check" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
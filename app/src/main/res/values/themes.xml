<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.DailyNoActionbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Color_primary</item>
        <item name="colorPrimaryVariant">@color/Color_primary_dark</item>
        <item name="colorOnPrimary">@color/onPrimaryColor</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
        <item name="colorOnBackground">@color/onWindowBackgroundColor</item>
        <item name="colorSurface">@color/surfaceColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/onPrimaryColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/windowBackgroundColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/windowBackgroundColor</item>
        <item name="android:navigationBarColor" tools:ignore="DuplicateDefinition">@color/windowBackgroundColor</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
    
    <style name="PrimaryTheme" parent="Theme.DailyNoActionbar">
        <item name="colorPrimary">@color/primaryTealColor</item>
        <item name="colorPrimaryVariant">@color/primaryVariantTealColor</item>
        <item name="colorSecondary">@color/secondaryTealColor</item>
        <item name="colorSecondaryVariant">@color/secondaryTealColor</item>
    </style>

    <style name="PurpleTheme" parent="Theme.DailyNoActionbar">
        <item name="colorPrimary">@color/primaryPurpleColor</item>
        <item name="colorPrimaryVariant">@color/primaryVariantPurpleColor</item>
        <item name="colorSecondary">@color/secondaryPurpleColor</item>
        <item name="colorSecondaryVariant">@color/secondaryPurpleColor</item>
    </style>


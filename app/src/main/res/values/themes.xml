        <item name="colorPrimary">@color/primaryBlueColor</item>
        <item name="colorPrimaryVariant">@color/primaryVariantBlueColor</item>
        <item name="colorSecondary">@color/secondaryBlueColor</item>
        <item name="colorSecondaryVariant">@color/secondaryBlueColor</item>
    </style>


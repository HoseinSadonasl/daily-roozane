        <item name="colorPrimary">@color/primaryRedColor</item>
        <item name="colorPrimaryVariant">@color/primaryVariantRedColor</item>
        <item name="colorSecondary">@color/secondaryRedColor</item>
        <item name="colorSecondaryVariant">@color/secondaryRedColor</item>
    </style>

    <style name="YellowTheme" parent="Theme.DailyNoActionbar">
        <item name="colorPrimary">@color/primaryYellowColor</item>z
        <item name="colorPrimaryVariant">@color/primaryVariantYellowColor</item>
        <item name="colorSecondary">@color/secondaryYellowColor</item>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="iconButton_toolbar">
        <item name="android:elevation">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:fontFamily">@font/iranyekanmedium</item>
    </style>

    <style name="dialog_btn_style"  parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_marginStart">@dimen/padding_8dp</item>
        <item name="android:layout_marginEnd">@dimen/padding_8dp</item>
        <item name="android:padding">@dimen/padding_12dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/iranyekanregular</item>
    </style>

    <style name="TinyText">
        <item name="android:fontFamily">@font/iranyekanregular</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ReqularText">
        <item name="android:fontFamily">@font/iranyekanregular</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="MediumText">
        <item name="android:fontFamily">@font/iranyekanmedium</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="MediumTextBold">
        <item name="android:fontFamily">@font/iranyekanbold</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="BigText">
        <item name="android:fontFamily">@font/iranyekanmedium</item>
        <item name="android:textSize">@dimen/_20sp</item>
    </style>

    <style name="BigTextBold">
        <item name="android:fontFamily">@font/iranyekanbold</item>
        <item name="android:textSize">@dimen/_20sp</item>
    </style>

</resources>